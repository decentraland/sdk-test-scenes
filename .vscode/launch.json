  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run",
      "program": "dist/index.js",
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**/*.js", "node_modules/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "autoAttachChildProcesses": true
    }
  ]
